<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.SubPage01">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:layout_marginTop="100dp"
            android:theme="@style/AppTheme.AppBarOverlay" />
        <!-- Other views -->
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:id="@+id/iconi"
        android:layout_gravity="center_horizontal" />

    <ListView android:id="@+id/peopleListView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="142dp" />

    <ListView
        android:id="@+id/yourList"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/iconi"
        android:layout_toEndOf="@+id/iconi"
        android:layout_below="@+id/iconi"
        android:divider="#ffffff" />

    <TextView
        android:text="Friend List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourList"
        android:layout_toRightOf="@+id/iconi"
        android:layout_toEndOf="@+id/iconi"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

</RelativeLayout>
